<h1>Log'n In</h1>

<form action="<%= session_url %>" method="POST">
  
  <input type="hidden" 
    name="authenticity_token" 
    value="<%= form_authenticity_token %>">
    
  <label>
    Email
    <input type="text" name="email" value="<%= params[:email] %>">
  </label>
    
  <label>
    Password
    <input type="password" name="password">
  </label>
  
  <button>Log In!</button>

</form>